@model GestaoWeb.Models.Sala

@{
    ViewData["Title"] = "Deletar Sala";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que você quer deletar ?</h3>
<div>
    <h4>Sala</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdSala" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Volta a lista</a>
    </form>
</div>
